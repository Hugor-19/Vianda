<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bot贸n de retroceso y carrito -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/btnCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/carro"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Imagen del producto -->

        <!-- Nombre del producto -->

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="400dp"
            android:layout_margin="10dp"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inicio"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburguesa especial"
            android:textSize="22sp"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <!-- Descripci贸n -->
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripci贸n del producto..."
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_marginTop="5dp"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$17.000"
            android:textSize="18sp"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:textColor="@color/green_primary"
            android:layout_marginTop="10dp"/>

        <!-- Adicionales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionales"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <!-- Lista de adicionales -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <!-- Controles de cantidad y bot贸n de compra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="10dp"
            android:layout_marginVertical="180dp"
            android:background="@color/white">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/agregar_btn"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingHorizontal="20dp"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/quitar_btn"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="#2ECC71"
                android:text="Agregar $21.500"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
